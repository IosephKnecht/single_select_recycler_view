<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="floatingActionButtonStyle">@style/CustomFloatingActionButtonStyle</item>
    </style>

    <style name="CustomSpinnerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner_selector</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="CustomFloatingActionButtonStyle" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/accent</item>
        <item name="useCompatPadding">true</item>
        <item name="tint">@color/primary_light</item>
    </style>

</resources>
